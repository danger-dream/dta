{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"compilerOptions": {
			"types": [
				"./types.d.ts"
			]
		}
	},
	"include": ["src", "types.d.ts", "global.ts"],
	"references": [
		{ "path": "./tsconfig.node.json" }
	]
}
