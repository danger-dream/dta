{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"src",
		"src/translate/lib/helper.ts",
		"global.d.ts",
		"types.d.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
